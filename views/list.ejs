<%- include("header") -%>
    <div class="box1" id="heading">
        <h1>My Day</h1>
    </div>
    <div class="box">

        <% for(var i=0;i<newListItem.length;i++) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <div class="round">
                        <input type="checkbox" name="checkbox" value="<%= newListItem[i]._id%>" onChange="this.form.submit()" id="checkbox">
                        <label for="checkbox"></label>
                    </div>
                    <p>
                        <%= newListItem[i].name %>
                    </p>
                    <hr style="width:82%">
                    <br>
                </div>
            </form>
            <% } %>
                <form class="item" action="/" method="post">
                    <input type="text" name="task">
                    <hr style="background-color: black; height: 1px; margin-bottom: 40px; width: 47%">
                    <button id="b" type="submit" <span id="s2"></span>+</button>
                </form>
    </div>